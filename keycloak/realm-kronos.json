{
    "realm": "kronos",
    "enabled": true,
    "displayName": "KRONOS HR",
    "displayNameHtml": "<div class=\"kc-logo-text\"><span>KRONOS HR</span></div>",
    "sslRequired": "external",
    "registrationAllowed": false,
    "loginWithEmailAllowed": true,
    "duplicateEmailsAllowed": false,
    "resetPasswordAllowed": true,
    "editUsernameAllowed": false,
    "bruteForceProtected": true,
    "permanentLockout": false,
    "maxFailureWaitSeconds": 900,
    "minimumQuickLoginWaitSeconds": 60,
    "waitIncrementSeconds": 60,
    "quickLoginCheckMilliSeconds": 1000,
    "maxDeltaTimeSeconds": 43200,
    "failureFactor": 5,
    "otpPolicyType": "totp",
    "otpPolicyAlgorithm": "HmacSHA1",
    "otpPolicyInitialCounter": 0,
    "otpPolicyDigits": 6,
    "otpPolicyLookAheadWindow": 1,
    "otpPolicyPeriod": 30,
    "otpSupportedApplications": [
        "FreeOTP",
        "Google Authenticator"
    ],
    "roles": {
        "realm": [
            {
                "name": "admin",
                "description": "HR Administrator - Full access"
            },
            {
                "name": "manager",
                "description": "Area Manager - Team access"
            },
            {
                "name": "employee",
                "description": "Employee - Own data access"
            },
            {
                "name": "approver",
                "description": "Capability: Can approve requests"
            },
            {
                "name": "hr",
                "description": "HR Staff - Human Resources access"
            }
        ]
    },
    "defaultRoles": [
        "employee"
    ],
    "clients": [
        {
            "clientId": "kronos-frontend",
            "name": "KRONOS Frontend",
            "enabled": true,
            "publicClient": true,
            "standardFlowEnabled": true,
            "directAccessGrantsEnabled": true,
            "redirectUris": [
                "http://localhost:3000/*",
                "http://localhost/*"
            ],
            "webOrigins": [
                "http://localhost:3000",
                "http://localhost"
            ],
            "attributes": {
                "pkce.code.challenge.method": "S256",
                "post.logout.redirect.uris": "http://localhost:3000/*"
            }
        },
        {
            "clientId": "kronos-backend",
            "name": "KRONOS Backend",
            "enabled": true,
            "publicClient": false,
            "standardFlowEnabled": false,
            "serviceAccountsEnabled": true,
            "directAccessGrantsEnabled": true,
            "secret": "kronos-backend-secret-change-me"
        }
    ],
    "users": [
        {
            "username": "admin@kronos.local",
            "email": "admin@kronos.local",
            "firstName": "System",
            "lastName": "Administrator",
            "enabled": true,
            "emailVerified": true,
            "credentials": [
                {
                    "type": "password",
                    "value": "admin123",
                    "temporary": false
                }
            ],
            "realmRoles": [
                "admin",
                "approver",
                "employee"
            ]
        },
        {
            "username": "manager@kronos.local",
            "email": "manager@kronos.local",
            "firstName": "Mario",
            "lastName": "Rossi",
            "enabled": true,
            "emailVerified": true,
            "credentials": [
                {
                    "type": "password",
                    "value": "manager123",
                    "temporary": false
                }
            ],
            "realmRoles": [
                "manager",
                "approver",
                "employee"
            ]
        },
        {
            "username": "employee@kronos.local",
            "email": "employee@kronos.local",
            "firstName": "Giuseppe",
            "lastName": "Verdi",
            "enabled": true,
            "emailVerified": true,
            "credentials": [
                {
